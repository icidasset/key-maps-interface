<div class="mod-map-toolbar">
  <div class="map-toolbar__actions"></div>
  {{partial "partials/map/toolbar-url"}}
</div>


<div class="content-wrapper">
  <form class="form" {{action "save" on="submit"}}>
    <label for="sort_by">Sort by</label>

    {{#if has_keys}}
      <div class="field">
        <div class="form__selectize">
          {{ember-selectize
            content=select_keys
            selection=sort_by_select_value
            optionValuePath="content.key"
            optionLabelPath="content.name"
            placeholder="key"
            multiple=false}}
        </div>
      </div>
    {{else}}
      <div class="message">
        <i icon="î€†"></i>
        Add some keys first
      </div>
    {{/if}}

    <label for="include_json_root">Include Root In JSON</label>

    <div class="field">
      {{input-boolean value=map_model.settings.include_json_root}}
    </div>

    <button class="btn" type="submit">Save</button>

    {{#each flashMessages.queue as |flash|}}
      {{#flash-message flash=flash class="message"}}
        <i class="check"></i> {{flash.message}}
      {{/flash-message}}
    {{/each}}
  </form>
</div>
