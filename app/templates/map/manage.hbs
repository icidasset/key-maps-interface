<div class="mod-map-toolbar">
  <div class="map-toolbar__actions"></div>
  {{partial "partials/map/toolbar-url"}}
</div>


<div class="content-wrapper">
  <div class="form">

    <div class="row-wrapper">
      <label>
        Import data
      </label>

      <div class="row">
        <div class="field">
          {{textarea
            value=import_data_text
            placeholder='[{ key: "example", other_key: 1 }]'
          }}
        </div>
      </div>

      <button class="btn" {{action "import_data"}}>
        Import data
      </button>

      {{#each flashMessages.queue as |flash|}}
        {{#flash-message flash=flash class="message" as |component flash|}}
          {{#if (equal component.flashType "Success")}}
            <i class="check"></i>
          {{else if (equal component.flashType "Warning")}}
            <i class="help"></i>
          {{/if}}

          {{flash.message}}
        {{/flash-message}}
      {{/each}}
    </div>

    <p class="note">
      <i class="bell"></i> Only adds data for existing keys
      and you must save the data yourself, on the data page.
    </p>



    <div class="form__spacer"></div>



    <div class="row-wrapper">
      <label>
        Remove map
      </label>
    </div>

    <p class="note">
      <i class="bell"></i> Yes, it's permanent.
    </p>

    <p>
      {{#if self_destruct_confirmation}}
        <a class="btn" {{action "self_destruct_confirmation"}}>
          Confirm self destruction
        </a>
      {{else}}
        <a class="btn" {{action "self_destruct"}}>
          Self destruct
        </a>
      {{/if}}
    </p>


  </div>
</div>
